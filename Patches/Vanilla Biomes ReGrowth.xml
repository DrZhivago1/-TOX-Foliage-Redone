                <!-- ================ Biome Ice Sheet ================ -->
                
			

		<li Class="PatchOperationAdd">
		<xpath>/Defs/BiomeDef[defName = "IceSheet"]/wildPlants</xpath>
		<value>
		    <wildPlants>
			<RG-T_Plant_ScrubPine>1.0</RG-T_Plant_ScrubPine>
			<RG-BF_Plant_BorealFern>1.0</RG-BF_Plant_BorealFern>
		    </wildPlants>
		</value>
	       </li>


	
                <!-- ================ Biome Sea Ice ================ -->
                







