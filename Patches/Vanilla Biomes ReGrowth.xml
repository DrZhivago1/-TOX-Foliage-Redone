<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>ReGrowth.BOTR.BorealForestExpansion</li>
            <li>ReGrowth.BOTR.TemperateForestExpansion</li>
            <li>ReGrowth.BOTR.TundraExpansion</li>
            <li>ReGrowth.BOTR.ColdBogExpansion</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                

                <!-- ================ Biome Boreal Forest ================ -->


		<li Class="PatchOperationAdd">
		<xpath>/Defs/BiomeDef[defName = "BorealForest"]/wildPlants</xpath>
		<value>
		    <wildPlants>
			<RG-BF_Plant_RimReed>0.6</RG-BF_Plant_RimReed>
			<RG-BF_Plant_BorealFern>2.0</RG-BF_Plant_BorealFern>
			<RG-T_Plant_ScrubPine>1.0</RG-T_Plant_ScrubPine>
                        <RG-BF_Plant_BlueTreePine>1.0</RG-BF_Plant_BlueTreePine>
                        <RG-BF_Plant_LargeTreePine>0.8</RG-BF_Plant_LargeTreePine>
                        <RG-BF_Plant_OrangeTreePine>0.2</RG-BF_Plant_OrangeTreePine>
                        <RG-BF_Potokus>0.025</RG-BF_Potokus>
			<RG-T_Plant_LupineIceland>0.6</RG-T_Plant_LupineIceland>
			<RG-T_Plant_CrimsonCushion>2.0</RG-T_Plant_CrimsonCushion>
		    </wildPlants>
		</value>
	       </li>








                <!-- ================ Biome Tundra ================ -->


                <li Class="PatchOperationReplace">
                    <xpath>/Defs/BiomeDef[defName = "Tundra"]/terrainsByFertility</xpath>
                    <value>
			<terrainsByFertility>
				<li>
					<terrain>RG_TundraSoil</terrain>
					<min>-999</min>
					<max>0.87</max>
				</li>
				<li>
					<terrain>SoilRich</terrain>
					<min>0.87</min>
					<max>999</max>
				</li>
			</terrainsByFertility>
			</value>
                </li>
                

		<li Class="PatchOperationAdd">
		<xpath>/Defs/BiomeDef[defName = "Tundra"]/wildPlants</xpath>
		<value>
		    <wildPlants>
			<RG-BF_Plant_BorealFern>1.0</RG-BF_Plant_BorealFern>
                        <RG-BF_Plant_BlueTreePine>2.0</RG-BF_Plant_BlueTreePine>
                        <RG-BF_Plant_LargeTreePine>3.0</RG-BF_Plant_LargeTreePine>
                        <RG-BF_Plant_OrangeTreePine>2.0</RG-BF_Plant_OrangeTreePine>
			<RG-T_Plant_TundraGrass>10</RG-T_Plant_TundraGrass>
			<RG-T_Plant_TundraTallGrass>5</RG-T_Plant_TundraTallGrass>
			<RG-T_Plant_CrimsonCushion>5</RG-T_Plant_CrimsonCushion>
			<RG-T_Plant_TundraCotton>0.6</RG-T_Plant_TundraCotton>
			<RG-T_Plant_RimbayWillow>0.4</RG-T_Plant_RimbayWillow>
			<RG-T_Plant_Saxifraga>0.5</RG-T_Plant_Saxifraga>
                        <RG-T_Plant_LupineIceland>0.5</RG-T_Plant_LupineIceland>
                        <RG-T_Plant_BramblesRed>0.8</RG-T_Plant_BramblesRed>
                        <RG-T_Plant_BramblesYellow>0.8</RG-T_Plant_BramblesYellow>
			<RG-T_Plant_YellowTreePine>2.0</RG-T_Plant_YellowTreePine>
			<RG-T_Hygrophorus>0.025</RG-T_Hygrophorus>
		    </wildPlants>
		</value>
	       </li>








                <!-- ================ Biome Cold Bog ================ -->


		<li Class="PatchOperationAdd">
		<xpath>/Defs/BiomeDef[defName = "ColdBog"]/wildPlants</xpath>
		<value>
		    <wildPlants>
      			<RG-BF_Plant_RimReed>0.2</RG-BF_Plant_RimReed>
			<RG-BF_Plant_BorealFern>1.0</RG-BF_Plant_BorealFern>
                        <RG-BF_Plant_LargeTreePine>0.7</RG-BF_Plant_LargeTreePine>
                        <RG-BF_Plant_OrangeTreePine>0.5</RG-BF_Plant_OrangeTreePine>
                        <RG-T_Plant_LupineIceland>0.4</RG-T_Plant_LupineIceland>
			<RG-T_Plant_YellowTreePine>1.02</RG-T_Plant_YellowTreePine>
			<RG-T_Plant_CrimsonCushion>1.2</RG-T_Plant_CrimsonCushion>
			<RG-CB_Plant_ReedGrass>3.0</RG-CB_Plant_ReedGrass>
			<RG-CB_Dervish>0.5</RG-CB_Dervish>
			<RG-CB_Plant_SpruceTreePine>2.6</RG-CB_Plant_SpruceTreePine>
